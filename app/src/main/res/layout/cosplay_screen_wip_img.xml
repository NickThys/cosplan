<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecView_WipImages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/Btn_WipImagesGetImage"
        app:layout_constraintEnd_toEndOf="@+id/Btn_WipImagesGetImage"
        app:layout_constraintStart_toStartOf="@+id/Btn_WipImagesTakePicture"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Btn_WipImagesGetImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/WipImageGet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Btn_WipImagesTakePicture" />

    <Button
        android:id="@+id/Btn_WipImagesTakePicture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="@string/WipImageTake"
        app:layout_constraintBottom_toBottomOf="@+id/Btn_WipImagesGetImage"
        app:layout_constraintEnd_toStartOf="@+id/Btn_WipImagesGetImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Btn_WipImagesGetImage" />
</androidx.constraintlayout.widget.ConstraintLayout>