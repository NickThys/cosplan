<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecView_Shoppinglist"
        app:layout_constraintBottom_toTopOf="@+id/Fab_ShoppinglistAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/RecView_List" />

    <Button
        android:id="@+id/Btn_ShoppinglistClear"
        style="@style/ButtonFullWidth"
        android:text="@string/ShoppingListClear"
        app:layout_constraintBottom_toBottomOf="@+id/Fab_ShoppinglistAdd"
        app:layout_constraintEnd_toStartOf="@+id/Fab_ShoppinglistAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Fab_ShoppinglistAdd" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Fab_ShoppinglistAdd"
        style="@style/FAB"
        android:contentDescription="@string/ShoppingListAdd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />
</androidx.constraintlayout.widget.ConstraintLayout>