<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageView_ImageFullScreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/NewPart_ImageViewContentDescription"
            app:layout_constraintBottom_toTopOf="@+id/Btn_ImageDelete"
            app:layout_constraintEnd_toEndOf="@+id/Btn_ImageDelete"
            app:layout_constraintStart_toStartOf="@+id/Btn_ImageDelete"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cosplanv2" />

        <ImageButton
            android:id="@+id/ImageBtn_ImageClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ImageFullScreenClose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <Button
            android:id="@+id/Btn_ImageDelete"
            style="@style/ButtonFullWidth"
            android:text="@string/imageDelete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ImageView_ImageFullScreen" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>