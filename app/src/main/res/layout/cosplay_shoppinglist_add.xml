<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_CosplayShoppingList_Cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintEnd_toStartOf="@+id/btn_CosplayShoppingList_Add"
        app:layout_constraintStart_toStartOf="@+id/editText_CosplayShoppingList_ShopName"
        app:layout_constraintTop_toTopOf="@+id/btn_CosplayShoppingList_Add" />

    <Button
        android:id="@+id/btn_CosplayShoppingList_Add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:text="Add part"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editText_CosplayShoppingList_ShopName"
        app:layout_constraintStart_toEndOf="@+id/btn_CosplayShoppingList_Cancel"
        app:layout_constraintTop_toBottomOf="@+id/editText_CosplayShoppingList_ShopName" />

    <TextView
        android:id="@+id/txt_CosplayShoppingList_Title"
        style="@style/Titles"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Add part to the shoppinglist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_CosplayShoppingList_PartName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="Part name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_CosplayShoppingList_Title" />

    <EditText
        android:id="@+id/editText_CosplayShoppingList_ShopName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="shop"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_CosplayShoppingList_PartName"
        app:layout_constraintStart_toStartOf="@+id/editText_CosplayShoppingList_PartName"
        app:layout_constraintTop_toBottomOf="@+id/editText_CosplayShoppingList_PartName" />
</androidx.constraintlayout.widget.ConstraintLayout>